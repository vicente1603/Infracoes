<div class="modal fade" data-app-modal="logradouros.modal.dados" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="usuarios.form.dados">
                <div class="modal-header">
                    <button type="button" class="close" data-app-modal-dismiss="logradouros.modal.dados"><span>&times;</span></button>
                    <h4 class="modal-title">Novo Logradouro</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" data-ng-show="logradouros.modal.erros.aoSalvar">
                        <button type="button" class="close" data-ng-click="logradouros.modal.limparMensagens()"><span aria-hidden="true">&times;</span></button>
                        <span data-ng-repeat="erro in logradouros.modal.erros.aoSalvar">
                            <span data-ng-bind="erro"></span><br />
                        </span>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Rua</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="logradouros.logradouro.rua"
                                       required />
                                <label>Bairro</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="logradouros.logradouro.bairro"
                                       required />
                                <label>Cidade</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="logradouros.logradouro.cidade"
                                       required />
                                <label>Estado</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="logradouros.logradouro.estado"
                                       required />
                                <label>Cep</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="logradouros.logradouro.cep"
                                       required />
                                <label>Velocidade Máxima</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="logradouros.logradouro.velocidadeMax"
                                       required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-success"
                            data-ng-disabled="logradouros.form.dados.$invalid || logradouros.modal.salvando"
                            data-ng-click="logradouros.modal.salvar()">
                        <span data-ng-show="logradouros.modal.salvando">Salvando&nbsp;<i class="fa fa-refresh fa-spin"></i></span>
                        <span data-ng-hide="logradouros.modal.salvando">Salvar</span>
                    </button>
                    <span>&nbsp;ou</span>
                    <button type="button" class="btn btn-link" data-app-modal-dismiss="logradouros.modal.dados">
                        Fechar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>