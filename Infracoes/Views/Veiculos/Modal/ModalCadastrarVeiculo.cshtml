<div class="modal fade" data-app-modal="veiculos.modal.dados" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="usuarios.form.dados">
                <div class="modal-header">
                    <button type="button" class="close" data-app-modal-dismiss="veiculos.modal.dados"><span>&times;</span></button>
                    <h4 class="modal-title">Novo veículo</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" data-ng-show="veiculos.modal.erros.aoSalvar">
                        <button type="button" class="close" data-ng-click="veiculos.modal.limparMensagens()"><span aria-hidden="true">&times;</span></button>
                        <span data-ng-repeat="erro in veiculos.modal.erros.aoSalvar">
                            <span data-ng-bind="erro"></span><br />
                        </span>
                    </div>
                    <div class="row"> 
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Proprietário</label>
                                <select class="form-control"
                                        data-ng-model="veiculos.veiculo.idProprietario"
                                        data-ng-options="t.idProprietario as t.nomeProprietario for t in veiculos.proprietarios"
                                        data-ng-init="veiculos.consultarProprietarios()"
                                        required>
                                    <option value="">Selecione</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Modelos</label>
                                <select class="form-control"
                                        data-ng-model="veiculos.veiculo.idModelo"
                                        data-ng-options="t.idModelo as t.descricao for t in veiculos.modelos"
                                        data-ng-init="veiculos.consultarModelos()"
                                        required>
                                    <option value="">Selecione</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Placa</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="veiculos.veiculo.placa"
                                       required />
                                <label>Uf</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="veiculos.veiculo.uf"
                                       required/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-success"
                            data-ng-disabled="veiculos.form.dados.$invalid || veiculos.modal.salvando"
                            data-ng-click="veiculos.modal.salvar()">
                        <span data-ng-show="veiculos.modal.salvando">Salvando&nbsp;<i class="fa fa-refresh fa-spin"></i></span>
                        <span data-ng-hide="veiculos.modal.salvando">Salvar</span>
                    </button>
                    <span>&nbsp;ou</span>
                    <button type="button" class="btn btn-link" data-app-modal-dismiss="veiculos.modal.dados">
                        Fechar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>