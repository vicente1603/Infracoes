<div class="panel panel-white">
    <div class="panel panel-default">
        <div class="panel-heading"><i class="fa fa-search"></i>&nbsp;Filtro</div>
        <div class="panel-body">
            <form data-ng-submit="veiculos.consultar(true); veiculos.limparMensagens();">
                <div class="row-fluid">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Placa</label>
                            <input class="form-control"
                                   data-ng-model="veiculos.filtro.dados.placa" />
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="col-md-12">
                        <button class="btn btn-primary"
                                data-ng-disabled="veiculos.filtro.pesquisando">
                            <span data-ng-show="veiculos.filtro.pesquisando">Pesquisando&nbsp;<span class="fa fa-refresh fa-spin"></span></span>
                            <span data-ng-hide="veiculos.filtro.pesquisando">Pesquisar</span>
                        </button>
                        <button class="btn btn-warning" data-ng-click="veiculos.filtro.limpar(); veiculos.limparMensagens();">
                            Limpar Filtro
                        </button>
                    </div>
                </div>
            </form>
        </div>
        </div>
    </div>


