<div class="modal fade" data-app-modal="modelos.modal.confirmarRemover" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-app-modal-dismiss="modelos.modal.confirmarRemover"><span>&times;</span></button>
                Remover modelo
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" data-ng-show="modelos.modal.erros.aoRemover">
                    <button type="button" class="close" data-ng-click="modelos.modal.limparMensagens()"><span aria-hidden="true">&times;</span></button>
                    <span data-ng-repeat="erro in modelos.modal.erros.aoRemover" data-ng-bind="erro"></span>
                </div>
                <p>
                    Deseja realmente remover o modelo <strong data-ng-bind="modelos.modelo.descricao"></strong> ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button"
                        class="btn btn-success"
                        data-ng-click="modelos.modal.remover()">
                    <span data-ng-show="modelos.modal.removendo"
                          data-ng-disabled="modelos.modal.removendo">
                        Removendo&nbsp;<i class="fa fa-refresh fa-spin"></i>
                    </span>
                    <span data-ng-hide="modelos.modal.removendo">Sim</span>
                </button>
                <button type="button"
                        class="btn btn-danger"
                        data-app-modal-dismiss="modelos.modal.confirmarRemover">
                    Não
                </button>
            </div>
        </div>
    </div>
</div>


