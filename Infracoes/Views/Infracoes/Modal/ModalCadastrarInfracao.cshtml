<div class="modal fade" data-app-modal="infracoes.modal.dados" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="usuarios.form.dados">
                <div class="modal-header">
                    <button type="button" class="close" data-app-modal-dismiss="infracoes.modal.dados"><span>&times;</span></button>
                    <h4 class="modal-title">Nova Infração</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" data-ng-show="infracoes.modal.erros.aoSalvar">
                        <button type="button" class="close" data-ng-click="infracoes.modal.limparMensagens()"><span aria-hidden="true">&times;</span></button>
                        <span data-ng-repeat="erro in infracoes.modal.erros.aoSalvar">
                            <span data-ng-bind="erro"></span><br />
                        </span>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descrição</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="infracoes.infracao.descricao"
                                       required />
                            </div>
                            <div class="form-group">
                                <label>Velocidade</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="infracoes.infracao.velocidade"
                                       required />
                            </div>
                            <div class="form-group">
                                <label>Veículo</label>
                                <select class="form-control"
                                        data-ng-model="infracoes.infracao.idVeiculo"
                                        data-ng-options="t.idVeiculo as t.placa for t in infracoes.veiculos"
                                        data-ng-init="infracoes.consultarVeiculos()"
                                        required>
                                    <option value="">Selecione</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Logradouro</label>
                                <select class="form-control"
                                        data-ng-model="infracoes.infracao.idLogradouro"
                                        data-ng-options="t.idLogradouro as t.cep for t in infracoes.logradouros"
                                        data-ng-init="infracoes.consultarLogradouros()"
                                        required>
                                    <option value="">Selecione</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Agente</label>
                                <select class="form-control"
                                        data-ng-model="infracoes.infracao.idAgente"
                                        data-ng-options="t.idAgente as t.nomeAgente for t in infracoes.agentes"
                                        data-ng-init="infracoes.consultarAgentes()"
                                        required>
                                    <option value="">Selecione</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-success"
                            data-ng-disabled="infracoes.form.dados.$invalid || infracoes.modal.salvando"
                            data-ng-click="infracoes.modal.salvar()">
                        <span data-ng-show="infracoes.modal.salvando">Salvando&nbsp;<i class="fa fa-refresh fa-spin"></i></span>
                        <span data-ng-hide="infracoes.modal.salvando">Salvar</span>
                    </button>
                    <span>&nbsp;ou</span>
                    <button type="button" class="btn btn-link" data-app-modal-dismiss="infracoes.modal.dados">
                        Fechar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

